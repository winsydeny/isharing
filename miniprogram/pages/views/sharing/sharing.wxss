.header{
  height: 100rpx;
  widows: 100%;
}
.search{
   width: 100%;
   background: white; 
  position: fixed;
  z-index: 2;
  padding-top: 10rpx;
}
.search input{
    height: 60rpx;
    width: 85%;
    /* border: 1px solid rgb(230, 228, 228); */
    margin: 10rpx 20rpx;
    padding-left: 20rpx;
    border-radius: 12rpx;
    border: 1px solid #1cbbb4;
    background: white;
    color:black;
    display: inline-block;
    box-shadow: 1rpx 1rpx 6rpx #61c2bd77;
}

.search .icon-size{
    font-size: 60rpx;
    position: absolute;
    top: 18rpx;
    font-weight: 300;
    /* color: #e03997; */
    color: red;

}


.book-list {

}
.book-list .list-box{
    margin:0 24rpx;
    margin-bottom: 28rpx;
    /* height: 200rpx; */
    background: white;
    border: 1px solid white;
    box-shadow: 1rpx 1rpx 8rpx rgb(185, 184, 184);
    overflow: hidden;
    position: relative;
}

.list-box .box-img{
  width: 250rpx;
  height: 325rpx;
  margin: 10rpx;
  float: left;
}

.list-box .box-text .tittle{
    font-size: 38rpx;
    margin: 10rpx;
    text-align: center;
}
.list-box .box-text .author{
    margin: 20rpx;
    font-size: 28rpx;
}


.list-box .box-text .recommend{
    margin: 12rpx;
    font-size: 24rpx;
}
.list-box .box-text .recommend .recommend-tittle{
    font-size: 26rpx;
    color: green;
    /* margin: 10rpx; */
}

.icon-position{
    position: absolute;
    bottom: 10rpx;
    right: 20rpx;
}

.comment{
  height: auto;
  width: 100%;
}

